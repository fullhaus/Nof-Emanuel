pipeline {
    agent { label 'built-in' }
    stages {
        stage('Checkout code') {
            steps {
                echo 'Cloning the repository...'
                git branch: 'main', url: 'https://github.com/fullhaus/Nof-Emanuel.git'
            }
        }
        stage('Build docker image') {
            steps {
                echo 'Building docker image...'
                sh '''
                    cd ./app
                    docker build -t test:latest .
                    docker images
                '''
            }
        }
        stage('Deploy to AKS') {
            steps {
                echo 'Deploy to AKS'
            }
        }
    }
}